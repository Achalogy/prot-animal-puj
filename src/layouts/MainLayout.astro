---
import Base from "./base.astro";
import IconHuesito from "../icons/IconHuesito.jsx";
import {
  IconBrandInstagram,
  IconBrandFacebook,
  IconBrandTwitter,
  IconMenu,
} from "@tabler/icons-react";
import MenuList from "../components/MenuList.astro";
---

<Base>
  <div class="relative flex flex-col min-h-screen">
    <div
      class="flex flex-col h-[10vh] xl:h-[15vh] w-full p-4 gap-2 z-10 bg-[#FFD97E]"
    >
      <div
        class="flex-1 flex justify-between xl:justify-center items-center gap-2 xl:gap-4"
      >
        <div class="xl:flex-1">
          <div
            class="flex xl:hidden cursor-pointer"
            onclick="document.getElementById('mobile-menu').style.setProperty('display', 'flex')"
          >
            <IconMenu size={35} />
          </div>
        </div>
        <a
          href={"/"}
          class="flex flex-1 gap-2 items-center justify-center no-underline"
        >
          <div
            class="flex relative h-8 xl:h-12 aspect-square rounded-full bg-white overflow-hidden"
          >
            <img src={"../../assets/icon.jpg"} />
          </div>
          <h1
            class="hidden xl:flex xl:text-xl font-semibold tracking-wide text-slate-800 no-underline"
          >
            Protección Animal Javeriana
          </h1>
        </a>
        <div class="flex xl:flex-1">
          <div class="flex xl:pl-[25%]">
            <a
              href="https://www.instagram.com/proteccionanimaljaveriana/"
              target="_blank"
            >
              <IconBrandInstagram
                size={30}
                className="opacity-60 hover:opacity-100 cursor-pointer"
              />
            </a>
          </div>
        </div>
      </div>
      <div
        class="flex-1 hidden xl:flex justify-around xl:w-2/3 items-center text-gray-600 mx-auto xl:text-lg"
      >
        <MenuList />
      </div>
    </div>

    <div class="relative flex flex-col flex-1">
      <div class="px-6 p-4 flex justify-center bg-indigo-400">
        <p class="text-white font-semibold text-xl text-center">
          Estamos en inscripciones ¿Te gustaría ser parte del grupo? <a
            href="/registro"
            class="font-semibold underline">¡Únete a nosotros!</a
          >
        </p>
      </div>
      <slot />
    </div>

    <footer
      class="flex flex-col p-8 items-center justify-center h-[30vh] bg-[#FFD97E] gap-3"
    >
      <h4
        class="flex gap-2 items-center font-semibold text-lg xl:text-3xl truncate"
      >
        <span class="flex gap-2 items-center text-indigo-600 font-semibold">
          <IconHuesito
            className="hidden xl:flex"
            svgProps={{
              stroke: "rgb(79 70 229)",
            }}
            size={25}
          />
          <IconHuesito
            className="xl:hidden flex"
            svgProps={{
              stroke: "rgb(79 70 229)",
            }}
            size={15}
          />
          {new Date().getFullYear()}</span
        > Protección Animal Javeriana
      </h4>
      <p class="opacity-25 text-center">
        Creado por acha {"<3"} - PÁGINA NO OFICIAL
      </p>
      <div class="flex gap-4 opacity-50">
        <a
          href="https://www.instagram.com/proteccionanimaljaveriana"
          target="_blank"
        >
          <IconBrandInstagram size={35} />
        </a>
        <a
          href="https://facebook.com/ProteccionAnimalJaveriana/"
          target="_blank"
        >
          <IconBrandFacebook size={35} />
        </a>
        <a href="https://twitter.com/JaverianaAnimal" target="_blank">
          <IconBrandTwitter size={35} />
        </a>
      </div>
    </footer>

    {/* Mobile menu */}

    <div
      id="mobile-menu"
      style={{
        display: "none",
      }}
      class="flex-col fixed h-screen bg-[#5261b1] w-[65%] drop-shadow-xl z-50 p-6 py-8 text-white gap-8"
    >
      <div
        onclick="document.getElementById('mobile-menu').style.setProperty('display', 'none')"
        class="flex items-center gap-2 xl:hidden cursor-pointer"
      >
        {/* onClick={toggleMobileMenu} */}
        <IconMenu size={35} />
        <p class="font-semibold text-lg">Menú</p>
      </div>
      <div class="flex flex-col gap-2">
        <MenuList />
      </div>
    </div>
  </div>
</Base>
